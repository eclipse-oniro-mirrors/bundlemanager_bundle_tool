{
  "module": {
    "name": "entry",
    "type": "entry",
    "description": "$string:entry_desc",
    "mainElement": "MainAbility",
    "deviceTypes": [
      "default",
      "tablet",
      "2in1"
    ],
    "deliveryWithInstall": true,
    "installationFree": false,
    "pages": "$profile:main_pages",
    "abilities": [
      {
        "name": "MainAbility",
        "srcEntry": "./ets/mainability/MainAbility.ts",
        "description": "$string:MainAbility_desc",
        "icon": "$media:icon",
        "label": "$string:notice_title",
        "startWindowIcon": "$media:icon",
        "startWindowBackground": "$color:default_background_color",
        "exported": false,
        "launchType": "standard"
      }
    ],
    "requestPermissions": [
      {
        "reason": "$string:PowerServiceExtAbility_reason",
        "name": "ohos.permission.INSTALL_BUNDLE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.UNINSTALL_CLONE_BUNDLE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.GET_BUNDLE_INFO",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.CHANGE_ABILITY_ENABLED_STATE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.REMOVE_CACHE_FILES",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.GET_DEFAULT_APPLICATION",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.UNINSTALL_CLONE_BUNDLE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.SET_DEFAULT_APPLICATION",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.GET_INSTALLED_BUNDLE_LIST",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.RUN_DYN_CODE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.ACCESS_DYNAMIC_ICON",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.START_SHORTCUT",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.INSTALL_CLONE_BUNDLE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.MANAGE_SHORTCUTS",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.ACCESS_APP_INSTALL_DIR",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.GET_SIGNATURE_INFO",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.MIGRATE_DATA",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.INSTALL_PLUGIN_BUNDLE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.UNINSTALL_PLUGIN_BUNDLE",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "reason": "$string:inject_input_reason",
        "name": "ohos.permission.INTERACT_ACROSS_LOCAL_ACCOUNTS",
        "usedScene": {
          "abilities": [
            "MainAbility"
          ],
          "when": "always"
        }
      }
    ]
  }
}
